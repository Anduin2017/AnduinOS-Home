@model Anduin.AnduinOSHome.Views.Shared.Components.MarketingFooter.MarketingFooterViewModel
@using Microsoft.AspNetCore.Localization

@* Footer *@
<footer class="py-5 bg-dark">
    <div class="container">
        <div class="row mb-4">
            <div class="col-12 col-lg-4">
                <div class="mb-3">
                    <img src="@Model.LogoUrl" alt="logo" style="width: 24px; height: 24px;" loading="lazy" />
                </div>
                <p class="text-white-50">
                    @Localizer["AnduinOS - a custom Ubuntu-based Linux distribution that offers a familiar and easy-to-use experience for anyone moving to Linux."]
                </p>
                <div class="dropdown mt-3 mb-3">
                    @{
                        var currentCulture = ViewContext.HttpContext.Features
                            .Get<IRequestCultureFeature>()?
                            .RequestCulture.Culture.Name;
                    }
                    <form asp-controller="Culture" asp-action="Set" method="post" class="d-inline" asp-route-returnUrl="@(Context.Request.Path + Context.Request.QueryString)">
                        <select name="culture" onchange="this.form.submit()" class="form-select form-select-sm w-auto">
                            @foreach (var culture in Aiursoft.WebTools.OfficialPlugins.LocalizationPlugin.SupportedCultures)
                            {
                                <option value="@culture.Key"
                                        selected="@(culture.Key == currentCulture ? "selected" : null)">
                                    @culture.Value
                                </option>
                            }
                        </select>
                    </form>
                </div>
            </div>
            <div class="col-12 col-md-4 col-lg-2 mb-3 mb-md-0">
                <h4 class="text-light fs-5">@Localizer["Resources"]</h4>
                <ul class="list-unstyled ps-0 mb-0 mt-3">
                    <li class="mt-2">
                        <a href="https://news.anduinos.com" class="text-white-50">@Localizer["News"]</a>
                    </li>
                    <li class="mt-2">
                        <a href="https://github.com/Anduin2017/AnduinOS"
                           class="text-white-50">@Localizer["Source Code"]</a>
                    </li>
                    <li class="mt-2">
                        <a href="https://github.com/Anduin2017/AnduinOS/discussions"
                           class="text-white-50">@Localizer["Community"]</a>
                    </li>
                    <li class="mt-2">
                        <a href="https://docs.anduinos.com/index.html" class="text-white-50">@Localizer["Document"]</a>
                    </li>
                    <li class="mt-2">
                        <a href="https://uptime.aiursoft.com/status/anduinos" class="text-white-50">@Localizer["Service Status"]</a>
                    </li>
                </ul>
            </div>
            <div class="col-12 col-md-4 col-lg-2 mb-3 mb-md-0">
                <h4 class="text-light fs-5">@Localizer["Reference"]</h4>
                <ul class="list-unstyled ps-0 mb-0 mt-3">
                    <li class="mt-2">
                        <a href="https://flathub.org/home" class="text-white-50">Flathub</a>
                    </li>
                    <li class="mt-2">
                        <a href="https://kernel.org/" class="text-white-50">Linux</a>
                    </li>
                    <li class="mt-2">
                        <a href="https://ubuntu.com/desktop" class="text-white-50">Ubuntu</a>
                    </li>
                    <li class="mt-2">
                        <a href="https://www.debian.org/devel/debian-desktop/"
                           class="text-white-50">Debian Desktop</a>
                    </li>
                </ul>
            </div>
            <div class="col-12 col-md-4 col-lg-2 mb-3 mb-md-0">
                <h4 class="text-light fs-5">@Localizer["Legals"]</h4>
                <ul class="list-unstyled ps-0 mb-0 mt-3">
                    <li class="mt-2">
                        <a href="https://github.com/Anduin2017/AnduinOS/blob/1.5/LICENSE"
                           class="text-white-50">@Localizer["License"]</a>
                    </li>
                    <li class="mt-2">
                        <a href="https://github.com/Anduin2017/AnduinOS/blob/1.5/OSS.md"
                           class="text-white-50">@Localizer["Open Source"]</a>
                    </li>
                    <li class="mt-2">
                        <a asp-controller="Home" asp-action="Privacy"
                           class="text-white-50">@Localizer["Privacy Policy"]</a>
                    </li>
                    <li class="mt-2">
                        <a asp-controller="Home" asp-action="Terms"
                           class="text-white-50">@Localizer["Terms of Service"]</a>
                    </li>
                </ul>
            </div>
            <div class="col-12 col-md-4 col-lg-2 mb-3 mb-md-0">
                <h4 class="text-light fs-5">@Localizer["Social"]</h4>
                <ul class="list-unstyled ps-0 mb-0 mt-3">
                    <li class="mt-2">
                        <i class="fa-brands fa-discord"></i>
                        <a href="https://discord.com/invite/b2N3aB7Ndv" class="text-white-50" rel="me"
                           target="_blank">Discord</a>
                    </li>
                    <li class="mt-2">
                        <i class="fa-brands fa-github"></i>
                        <a href="https://github.com/Anduin2017/AnduinOS/" class="text-white-50"
                           target="_blank">Github</a>
                    </li>
                    <li class="mt-2">
                        <i class="fa-solid fa-comments"></i>
                        <a href="https://stt.gg/dPwPs8e6" class="text-white-50"
                           target="_blank">Stoat</a>
                    </li>
                    <li class="mt-2">
                        <i class="fa-brands fa-mastodon"></i>
                        <a href="https://mastodon.social/@@AnduinOS" class="text-white-50" rel="me"
                           target="_blank">Mastodon @Localizer["(Running by community)"]</a>
                    </li>
                    <li class="mt-2">
                        <i class="fa-brands fa-reddit"></i>
                        <a href="https://reddit.com/r/AnduinOS/" class="text-white-50" rel="me"
                           target="_blank">Reddit @Localizer["(Running by community)"]</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <p class="text-white-50 mt-4 text-center mb-0">
                    Â© @DateTime.Now.Year <a href="@Model.BrandHomeUrl" target="_blank">@Model.BrandName</a>
                    @if (!string.IsNullOrWhiteSpace(Model.Icp) && System.Globalization.CultureInfo.CurrentCulture.Name == "zh-CN")
                    {
                        <span> | </span>
                        <a href="https://beian.miit.gov.cn/" target="_blank">@Model.Icp</a>
                    }
                </p>
            </div>
        </div>
    </div>
</footer>
