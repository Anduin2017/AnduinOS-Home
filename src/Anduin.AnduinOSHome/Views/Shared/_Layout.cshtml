@{
    var context = ViewContext.HttpContext;
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description"
          content="AnduinOS is a custom Ubuntu-based Linux distribution that offers a familiar and easy-to-use experience for anyone moving to Linux."/>
    <meta name="author" content="Anduin Xue">
    <title>@ViewData["Title"] - AnduinOS</title>
    <link rel="canonical" href="@(context.Request.Scheme)://@(context.Request.Host)@(context.Request.Path)" />
    <link rel="shortcut icon" href="./favicon.svg">
    <link rel="stylesheet" href="~/node_modules/@@aiursoft/uistack/dist/css/app.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <link rel="alternate" type="application/atom+xml" title="AnduinOS Releases" href="https://github.com/Anduin2017/AnduinOS/releases.atom" />
    @await RenderSectionAsync("styles", required: false)
</head>

<body>

@RenderBody()

<script src="~/node_modules/@@aiursoft/uistack/dist/js/app.js" asp-append-version="true" defer></script>
@await RenderSectionAsync("scripts", false)

<vc:footer></vc:footer>

</body>

</html>

