@* Download part section *@
<section class="py-5 bg-white" id="download-links">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-xl-10 col-xxl-10 mx-auto">
                <div class="mb-4 text-center">
                    <span
                        class="text-uppercase text-primary text-sm fw-medium mb-1 d-block">@Localizer["Versions"]</span>
                    <h2 class="h1">@Localizer["Choose your AnduinOS version"]</h2>
                    <p class="text-muted fs-lg">@Localizer["AnduinOS is available in"] <a
                            href="https://docs.anduinos.com/VERSIONS.html">@Localizer["two version branches"]</a>: @Localizer["LTS and Standard"]@Localizer["."]
                        @Localizer["The LTS version is recommended for users need a stable long-term support, while the Standard version is recommended for users with newer devices and want to explore the latest features."]
                    </p>
                </div>
                <div class="row py-4">
                    @foreach (var version in visibleVersions)
                    {
                            var sm = 12 / visibleVersions.Count();
                            var divClass = $"col-sm-{sm}";

                            var additionalLangs = (version.AdditionalLanguageSupport != null && version.AdditionalLanguageSupport.Length > 0)
                                ? string.Join(",", version.AdditionalLanguageSupport)
                                : "";
                        <div class="@divClass mb-5 mb-md-0">
                            <div class="card text-center h-100 @(version.LargeCard ? "middle-card" : "")">
                                <div class="card-body d-flex flex-column"
                                     @(version.NotRecommended
                                         ? Html.Raw("style=\"color:#bbb !important\"")
                                         : null)>
                                    <div class="mb-4">
                                        <h5>@version.Codename</h5>
                                        <span class="@(version.Recommended ? "display-2" : "display-5")">
                                            @version.Version
                                        </span><br/>
                                        <span>@version.Type</span>
                                    </div>

                                    <h6 class="mt-3">@Localizer["Includes:"]</h6>
                                    <ul class="list-unstyled">
                                        <li class="mb-2">@Localizer["Support till"] @version.Support</li>
                                        <li class="mb-2">@version.Gnome</li>
                                        <li class="mb-2">@version.Packages @Localizer["packages"]</li>
                                        <li class="mb-2">@version.Kernel</li>
                                        <li class="mb-2">@Localizer["Released on"] @version.ReleaseDate</li>
                                        <li class="mb-2">
                                            @Localizer["Latest version"] @version.Latest
                                        </li>
                                        @if (!string.IsNullOrEmpty(version.AdditionalText))
                                        {
                                            <li class="mb-2">@Localizer[version.AdditionalText]</li>
                                        }
                                        @if (version.Recommended)
                                        {
                                            <li class="mb-2">
                                                <span class="badge badge-subtle-primary">
                                                    @Localizer["Recommended"]
                                                </span>
                                            </li>
                                        }
                                    </ul>

                                    <div class="mt-auto">
                                        <button type="button"
                                                class="btn btn-lg btn-pill @(version.Recommended ? "btn-primary" : "btn-outline-primary")"
                                                data-bs-toggle="modal"
                                                data-bs-target="#download-modal"
                                                data-version="@version.Version"
                                                data-latest="@version.Latest"
                                                data-prefered-language="@currentCulture"
                                                data-size="@version.Size"
                                                data-additional-langs="@additionalLangs">
                                            @Localizer["Download"]
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

